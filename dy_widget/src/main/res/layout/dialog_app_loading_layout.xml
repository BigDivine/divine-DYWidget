<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:background="@drawable/shape_white_corner_5dp">

    <com.divine.dy.lib_widget.widget.AppLoadingView
        android:id="@+id/progress_app"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
         app:layout_constraintBottom_toTopOf="@id/progress_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/progress_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/back_black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/progress_app" />
</androidx.constraintlayout.widget.ConstraintLayout>
