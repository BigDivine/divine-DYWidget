<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corner_5dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新建班组信息"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/black_text_color" />
    <EditText
        android:id="@+id/explain_content"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="请输入班组信息"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColorHint="@color/edit_text_color"
        android:textColor="@color/gray_text_color"
        android:background="@drawable/round_back_hollow_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="50dp"
            android:background="@color/line_color"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/explain_cancel"
            android:layout_width="98dp"
            android:layout_height="50dp"
            android:text="取消"
            android:textColor="@color/gray_text_color"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginLeft="30dp" />
       <TextView
           android:id="@+id/explain_confirm"
            android:layout_width="98dp"
            android:layout_height="50dp"
            android:text="确认"
            android:textColor="@color/blue_text_color"
            android:textSize="13sp"
            android:gravity="center"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"/>
    </RelativeLayout>
</LinearLayout>