<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corner_5dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新建班组信息"
        android:gravity="center"
        android:layout_marginTop="@dimen/dy_20dp"
        android:textSize="@dimen/dy_16sp"
        android:textColor="@color/black_text_color" />
    <EditText
        android:id="@+id/explain_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dy_35dp"
        android:hint="请输入班组信息"
        android:gravity="center"
        android:layout_marginTop="@dimen/dy_15dp"
        android:textSize="@dimen/dy_14sp"
        android:textColorHint="@color/edit_text_color"
        android:textColor="@color/gray_text_color"
        android:background="@drawable/round_back_hollow_5"
        android:layout_marginLeft="@dimen/dy_10dp"
        android:layout_marginRight="@dimen/dy_10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dy_24dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dy_1dp"
            android:background="@color/line_color"/>
        <View
            android:layout_width="@dimen/dy_1dp"
            android:layout_height="@dimen/dy_50dp"
            android:background="@color/line_color"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/explain_cancel"
            android:layout_width="@dimen/dy_98dp"
            android:layout_height="@dimen/dy_50dp"
            android:text="取消"
            android:textColor="@color/gray_text_color"
            android:textSize="@dimen/dy_13sp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dy_30dp" />
       <TextView
           android:id="@+id/explain_confirm"
            android:layout_width="@dimen/dy_98dp"
            android:layout_height="@dimen/dy_50dp"
            android:text="确认"
            android:textColor="@color/blue_text_color"
            android:textSize="@dimen/dy_13sp"
            android:gravity="center"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/dy_30dp"/>
    </RelativeLayout>
</LinearLayout>